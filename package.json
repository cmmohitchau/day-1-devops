{
  "name": "day-1-devops",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:db" : "cd packages/db && bunx --bun prisma generate && cd ../..",
    "start:backend" : "cd apps/http-backend && bun run start",
    "start:frontend" : "cd apps/my-app && bun run start",
    "start:ws" : "cd apps/ws && bun run start"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "express": "^5.2.1"
  }
}
